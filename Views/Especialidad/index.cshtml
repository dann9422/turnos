@model IEnumerable<turnos.Models.especialidad>
<div class="container">
<p>
    @* <a asp-action="Create">Nuevo</a> *@
        <a asp-action="Create" class="btn-floating btn-large orange darken-1"><i class="material-icons">add_to_photos</i></a>
</p>
    <table class="responsive-table highlight z-depth-5 orange lighten-5">
        <thead class="orange darken-2 white-text">
            <tr>
                <th>@Html.DisplayNameFor(model => model.descripcion)
                <th></th>
                </th>
            </tr>
        </thead>
        <tbody>
            @* aqui colocaremos mas adelante el codigo para mostrar los registrops de la base de datos     *@
            @foreach (var item in Model)
            {
                 <tr>
                <td>@Html.DisplayFor(modelItem => item.descripcion)</td>
              <td>
                  <a asp-action="Edit" asp-route-id="@item.idEspecialidad"><i class="material-icons">edit</i></a> 
                <a asp-action="Delete" asp-route-id="@item.idEspecialidad"><i class="material-icons red-text">delete</i></a>
                    </td>     
            </tr>   
            }    
        </tbody>
    </table>
</div>