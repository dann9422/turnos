@model turnos.Models.Paciente
<div class="container">
<h4>Paciente</h4>
<hr>
<div class="row">
    <div class="col s12 m6">
      <div class="card hoverable teal accent-4">
        <div class="card-content white-text">
        <span class="card-title"><h5><b> @Html.DisplayFor(model => model.Nombre),@Html.DisplayFor(model => model.Apellido)</b></h5></span>
        <p>
    
        <dt>
            @Html.DisplayNameFor(Model=>Model.Nombre) :@Html.DisplayFor(modelo => modelo.Nombre)
        </dt>
        <dt>
            @Html.DisplayNameFor(Model=>Model.Apellido) :  @Html.DisplayFor(modelo => modelo.Apellido)
        </dt>
        
        <dt>
            @Html.DisplayNameFor(Model=>Model.Direccion) : @Html.DisplayFor(modelo => modelo.Direccion)
        </dt>
        
        <dt>
            @Html.DisplayNameFor(Model=>Model.Telefono) : @Html.DisplayFor(modelo => modelo.Telefono)
        </dt>
      
        <dt>
            @Html.DisplayNameFor(Model=>Model.Email) : @Html.DisplayFor(modelo => modelo.Email)
        </dt>
        
    
    </p>
</div>
<div class="card-action blue-grey darken-2">
          <form asp-action="Delete">
           <input type="hidden" asp-for="idPaciente" />
       <a asp-action="Edit" asp-route-id="@Model.idPaciente">Editar</a> 
        <a class="right" asp-action="Index">Volver</a>
        </form>
        </div>
   </div>
   
      </div>
    </div>

</div>