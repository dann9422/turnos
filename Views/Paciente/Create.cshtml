@model turnos.Models.Paciente

<div class="container">
<h4>Paciente</h4>
<hr>
<div class="row">
    <form class="col s12" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
        <div class="input-field col s6">
         <i class="material-icons prefix">account_circle</i>
            <label asp-for="Nombre">Nombre</label>
             <input asp-for="Nombre" type="text" class="validate">
            <span asp-validation-for="Nombre"></span>
        </div>
        <div class="input-field col s6">
            <input asp-for="Apellido" type="tel" class="validate">
          <label asp-for="Apellido">Apellido</label>
          <span asp-validation-for="Apellido" ></span>
        </div>
         <div class="input-field col s12">
               <i class="material-icons prefix">directions</i>
            <label asp-for="Direccion">Direccion</label>
            <input asp-for="Direccion" class="validate"/>
            <span asp-validation-for="Direccion"></span>
        </div>
         <div class="input-field col s12">
             <i class="material-icons prefix">phone</i>
           <input asp-for="Telefono" type="tel" class="validate">
          <label asp-for="Telefono">Telefono</label>
          <span asp-validation-for="Telefono" ></span>
        </div>
         <div class="input-field col s12">
          <i class="material-icons prefix">local_post_office</i>
          <input asp-for="Email" type="tel" class="validate">
          <label asp-for="Email">Email</label>
          <span asp-validation-for="Email" ></span>
        </div>

            <div class="row" >
            <div class="col s6 m6 ">
                <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Guardar
                 <i class="material-icons right">send</i>
                        </button>
        
            </div>
            <div class="col s6 m6">
                <a class="waves-effect waves-light btn grey darken-4" asp-action="Index"><i class="material-icons left ">undo</i>volver</a>
            </div>
            </div>
       

</div>
    </form>
</div>



</div>
